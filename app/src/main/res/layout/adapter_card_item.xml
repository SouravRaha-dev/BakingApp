<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/card_view_margin"
    app:cardElevation="@dimen/tab_view_width"
    app:cardCornerRadius="@dimen/card_corner_rad">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:contentDescription="@string/content_desc"
            android:id="@+id/card_imgView"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_view_img" />

        <TextView
            android:id="@+id/card_txtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/cardview_compat_inset_shadow"
            style="@style/title_card" />
    </LinearLayout>
</android.support.v7.widget.CardView>
