<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recipe_details_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/card_margin_2"
    android:layout_marginBottom="@dimen/card_margin_1"
    android:layout_marginLeft="@dimen/card_margin_2"
    android:layout_marginRight="@dimen/card_margin_2"
    app:cardElevation="@dimen/card_elev"
    app:cardCornerRadius="@dimen/card_corner_rad">

    <TextView
        android:id="@+id/ingredients_txtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_pad"
        style="@style/big_title_card"
        android:gravity="center_horizontal|center_vertical"
        tools:text="Ingredients"/>

</android.support.v7.widget.CardView>